@page
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@model DemoApp.Pages.Models.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
    <head>
        <title>DemoApp</title>
    </head>
    <body>
        <h1>Welcome Customer</h1>
        <h2>Orders of @User.Identity.Name</h2>
        <table border="1">
            <tr>
                <th>Product No</th>
                <th>Quantity Ordered</th>
                <th>Order Date</th>
            </tr>
            @foreach(var entry in Model.Invoice)
            {
                <tr>
                    <td>@entry.ProductNo</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.OrderDate</td>
                </tr>
            }
        </table>
        <p>
            <a asp-page-handler="logout">Logout</a>
        </p>
    </body>
</html>
