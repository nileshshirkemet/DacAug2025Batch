@page
@model DemoApp.Pages.Models.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
    <head>
        <title>DemoApp</title>
    </head>
    <body>
        <h1>Welcome Customer</h1>
        <h2>Please Sign-In</h2>
        <form method="post">
            <p>
                <b>Customer Id</b><br/>
                <input required type="text" asp-for="Login.UserName" />
            </p>
            <p>
                <b>Password</b><br/>
                <input required type="password" asp-for="Login.Password" />
            </p>
            <p>
                <input type="submit" value="Login" />
            </p>
        </form>
        <div asp-validation-summary="All"></div>
    </body>
</html>
